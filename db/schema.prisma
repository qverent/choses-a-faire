datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  title         String
  description   String?
  priority      String?
  user          User    @relation(fields: [userID], references: [id])
  userID        Int  
}

model User {
    id          Int     @id @default(autoincrement())
    username    String  @unique
    password    String
    items       Item[]
}